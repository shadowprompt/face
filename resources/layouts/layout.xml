<layout id="WatchFace">
    <drawable id="background"></drawable>
    <!-- 电量 -->
    <label id="batteryLabel" x="140" y="0" font="Graphics.FONT_XTINY" justification="Graphics.TEXT_JUSTIFY_CENTER" color="Graphics.COLOR_LT_GRAY" />
    <!-- 天气 -->
    <label id="weatherLabel" x="90" y="60" font="Graphics.FONT_XTINY" justification="Graphics.TEXT_JUSTIFY_CENTER" color="Graphics.COLOR_LT_GRAY" />
    <!-- 步数 -->
    <label id="stepText" x="180" y="70" font="Graphics.FONT_XTINY" justification="Graphics.TEXT_JUSTIFY_CENTER" color="Graphics.COLOR_WHITE" />
    <!-- 心率 -->
    <label id="heartrateText" x="215" y="107" font="Graphics.FONT_XTINY" justification="Graphics.TEXT_JUSTIFY_LEFT" color="Graphics.COLOR_WHITE" />
    <!-- 距离 -->
    <label id="distLabel" x="170" y="130" text="DIST" font="Graphics.FONT_XTINY" justification="Graphics.TEXT_JUSTIFY_LEFT" color="Graphics.COLOR_LT_GRAY" />
    <label id="distText" x="215" y="130" font="Graphics.FONT_XTINY" justification="Graphics.TEXT_JUSTIFY_LEFT" color="Graphics.COLOR_WHITE" />
    <!-- 卡路里 -->
    <label id="caloryLabel" x="170" y="150" text="CAL" font="Graphics.FONT_XTINY" justification="Graphics.TEXT_JUSTIFY_LEFT" color="Graphics.COLOR_LT_GRAY" />
    <label id="caloryText" x="215" y="150" font="Graphics.FONT_XTINY" justification="Graphics.TEXT_JUSTIFY_LEFT" color="Graphics.COLOR_WHITE" />
    <!-- 消息数 -->
    <label id="msgLabel" x="170" y="170" text="MSG" font="Graphics.FONT_XTINY" justification="Graphics.TEXT_JUSTIFY_LEFT" color="Graphics.COLOR_LT_GRAY" />
    <label id="msgText" x="215" y="170" font="Graphics.FONT_XTINY" justification="Graphics.TEXT_JUSTIFY_LEFT" color="Graphics.COLOR_WHITE" />
